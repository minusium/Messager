<Window x:Class="Messager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Messager"
        mc:Ignorable="d"
        Title="Messager" Height="350" Width="525">
    <TabControl x:Name="tabControl" TabStripPlacement="Bottom">
        <TabItem Header="Server">
            <local:CtlServer />
        </TabItem>
        <TabItem Header="Messager">
            <local:CtlMessager x:Name="messagerTab" />
        </TabItem>
    </TabControl>

</Window>
